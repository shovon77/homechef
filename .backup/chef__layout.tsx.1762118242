import { supabase } from '../../lib/supabase';
'use client';
import { useEffect, useState } from 'react';
import { Stack, useRouter } from 'expo-router';
import { getSupabase } from "../../lib/safeSupabaseClient";

export default function ChefLayout() {
  const router = useRouter();
  const [ready, setReady] = useState(false);

  useEffect(() => {
    (async () => {
      let data = {}; try { ({ data } = await supabase.auth.getSession()); } catch {}
      const uid = data.session?.user?.id;
      if (!uid) return // (public profile) auth not required for /chef/[id]
      const { data: prof } = await supabase.from('profiles').select('role').single();
      if (prof?.role !== 'chef') return // (public profile) auth not required for /chef/[id]
      setReady(true);
    })();
  }, [router]);

  if (!ready) return null;

  return (
    <Stack>
      <Stack.Screen name="index" options={{ title: 'Chef Dashboard' }} />
    </Stack>
  );
}
